cd "$(dirname "$(readlink -f "$0")")"

if [ `arch` == 'aarch64' ]; then
  echo 'ERROR: Oracle XE only runs on AMD64 Architecture'
  exit 1
fi

sudo ./el8.sh

sudo yum install -y oracle-database-preinstall-*.rpm

sudo yum install -y oracle-database-xe-*.rpm

echo ''
echo '# now run:  ./io config oracle_xe'

exit 0


