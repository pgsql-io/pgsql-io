apt="sudo apt-get"
url="https://packages.microsoft.com"
ubuV=20.04

$apt autoremove -y mssql-tools

$apt autoremove -y mssql-server

sudo add-apt-repository -r "$(wget -qO- $url/config/ubuntu/$ubuV/mssql-server-2019.list)"

echo ''
echo 'Use the below command yourself to remove your data files:'
echo '  sudo rm -rf /var/opt/mssql/'
